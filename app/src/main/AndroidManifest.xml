            </intent-filter>
        </activity>
        <activity android:name=".Activity.MainActivity" />
        <activity android:name=".Activity.RegistrationForm" />
        <activity android:name=".Activity.Sign_UpForm" />
        <activity android:name=".Activity.TabHost" />
